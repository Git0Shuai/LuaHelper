{
    "local": {
        "prefix": "local",
        "body": "local ${1:var} = ${0:nil}",
        "description": "local variable = ..."
    },
    "if": {
        "prefix": "if",
        "body": "if ${1:condition} then\n\t${0:}\nend",
        "description": "if .. then .. end"
    },
    "elseif": {
        "prefix": "elseif",
        "body": "elseif ${1:condition} then\n\t${0:}",
        "description": "elseif .. then "
    },
    "for": {
        "prefix": "for",
        "body": "for ${1:i} = ${2:1}, ${3:10} do\n\t${0:}\nend",
        "description": "for i = 1, n do end"
    },
    
    "fori": {
        "prefix": "fori",
        "body": "for ${1:i}, ${2:v} in ipairs(${3:t}) do\n\t${0:}\nend",
        "description": "for i, value in ipairs(t) do end"
    },
    
    "forp": {
        "prefix": "forp",
        "body": "for ${1:k}, ${2:v} in pairs(${3:t}) do\n\t${0:}\nend",
        "description": "for k, v in pairs(table) do end"
    },
    
    "do": {
        "prefix": "do",
        "body": "do\n${0:}\nend",
        "description": "do .. then"
    },
    "while": {
        "prefix": "while",
        "body": "while ${1:condition} do\n\t${0:}\nend",
        "description": "while condition .. end"
    },
    "repeat": {
        "prefix": "repeat",
        "body": "repeat\n\t${0:}\nuntil ${1:condition}",
        "description": "repeat .. until"
    },
    "local function": {
        "prefix": "local function",
        "body": "local function ${1:func}(${2:})\n\t${0:}\nend",
        "description": "local function func"
    },
    "function": {
        "prefix": "function",
        "body": "function ${1:func}(${2:})\n\t${0:}\nend",
        "description": "function func() .. end"
    }
}